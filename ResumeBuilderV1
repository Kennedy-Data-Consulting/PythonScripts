from docx import Document
from docx.shared import Pt

# Create a new Document
doc = Document()
doc.add_heading('Leisha Kennedy', level=1)

# Contact Information
contact_info = doc.add_paragraph()
contact_info.add_run('Phone: 205-317-1616 | Email: leisha.kennedy@gmail.com | LinkedIn: ')
contact_info.add_run('https://www.linkedin.com/in/leishakennedy/').italic = True

# Professional Summary
doc.add_heading('Professional Summary', level=2)
summary = "Accomplished Data Management Professional with over a decade of experience in SQL Server administration, development, and architecture. Expert in managing complex data systems with a focus on improving business outcomes through innovative data solutions. Proven leadership in guiding cross-functional teams to exceed business expectations through strategic data handling and analytics initiatives."
doc.add_paragraph(summary)

# Skills
doc.add_heading('Skills', level=2)
skills = [
" Expert in SQL Server (2000-2019) Administration, Development & Architecture",
" Advanced knowledge in Business Intelligence tools: SSRS, SSIS, SSAS, Power BI",
" Comprehensive understanding of Data Warehousing, Cloud Migrations, and System Upgrades",
" Proficient with Azure DevOps, GitHub, Snowflake, DB2, and AWS",
" Skilled in programming with Python, JSON, .NET; experienced with Grafana for monitoring",
" Strong background in regulatory compliance, including SOX and HIPAA",
" Demonstrated expertise in disaster recovery planning and operational resilience",
" In-depth experience with Windows Server management and optimization",

]
skills_para = doc.add_paragraph()
for skill in skills:
    skills_para.add_run(f"- {skill}\n").bold = False

# Professional Experience
doc.add_heading('Professional Experience', level=2)
experiences = [
    ("Manager, Data Platform and Analytics", "CarePayment Technologies, August 2022 - February 2024", [
        "Led the Data Engineering team to optimize data flow and reporting procedures using SSRS, Power BI, and crafted ELT import processes.",
        "Integrated Snowflake platform with DBT, Airflow, and Data Factory, enhancing data handling and analysis.",
        "Managed budgetary elements, onboarding, and training processes for team effectiveness and growth."
    ]),
    ("Senior Data Engineer", "Book A Million, August 2021 - August 2022", [
        "Streamlined data integration and transformation by redesigning SSIS packages and optimizing SQL databases.",
        "Transitioned reporting tools from QlikView to QlikSense, managing and supervising the data loading processes."
    ]),
    ("SQL Database Engineer", "Southern Company, November 2020 - August 2021", [
        "Assessed and enhanced SQL Server architectures; mentored developers in efficient query construction.",
        "Managed SQL and Linux code deployment schedules and performed on-call duties."
    ]),
    ("Senior SQL Database Architect", "Hibbett Sports, July 2019 - November 2020", [
        "Enhanced database reliability by transitioning from traditional disk clustering to AlwaysOn setups.",
        "Developed and executed disaster recovery plans to ensure continuity and safeguarded environments."
    ]),
    ("Manager, Reporting and Data", "Ram Tool, March 2019 - July 2019", [
        "Oversaw SQL database management and reporting, promoting cloud adoption for infrastructure improvements."
    ])
]

for title, place, tasks in experiences:
    exp_heading = doc.add_heading(level=3)
    exp_heading.add_run(title).bold = True
    exp_heading.add_run(f", {place}").italic = True
    for task in tasks:
        doc.add_paragraph(f"- {task}", style='List Bullet')

# Certifications
doc.add_heading('Certifications', level=2)
certifications = [
